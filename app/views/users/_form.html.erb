<%= simple_form_for :user, :url => {:action => :create} do |f| %>
  <% f.error_notification %>
  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :name %>
    <%= f.input :address %>
  </div>
  <div class="form-actions">
    <%= f.button :submit,"Submit" %>
  </div>
<% end %>
